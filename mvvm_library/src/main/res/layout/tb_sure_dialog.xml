<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.flyco.roundview.RoundRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x40"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="@dimen/x20">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x30"
            android:text="标题"
            android:textColor="@color/tb_text_black"
            android:textSize="@dimen/tb_text32" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:lineSpacingMultiplier="1.3"
            android:text="消息"
            android:textColor="@color/tb_text_black"
            android:textSize="@dimen/tb_text28" />


        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/x60"
            android:layout_marginEnd="@dimen/x20"
            android:text="确定"
            android:textColor="@color/tb_green"
            android:textSize="@dimen/tb_text28" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:layout_marginTop="@dimen/x60"
            android:layout_marginEnd="@dimen/x90"
            android:layout_toStartOf="@+id/sure"
            android:text="取消"
            android:textColor="@color/tb_green"
            android:textSize="@dimen/tb_text28" />


    </com.flyco.roundview.RoundRelativeLayout>

</layout>