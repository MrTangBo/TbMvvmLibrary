<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="titleTx"
            type="String" />

        <variable
            name="messageTx"
            type="String" />

        <variable
            name="sureTx"
            type="String" />

        <variable
            name="cancelTx"
            type="String" />


    </data>

    <com.flyco.roundview.RoundRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x40"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="@dimen/x20">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x30"
            android:text="@{titleTx,default=`标题`}"
            android:textColor="@color/tb_text_black"
            android:textSize="@dimen/tb_text32"
            android:visibility="@{titleTx.isEmpty? View.GONE:View.VISIBLE}" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:text="@{messageTx,default=`消息`}"
            android:textColor="@color/tb_text_black"
            android:textSize="@dimen/tb_text28" />


        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/x60"
            android:layout_marginEnd="@dimen/x20"
            android:text="@{sureTx,default=`确定`}"
            android:textColor="@color/tb_green"
            android:textSize="@dimen/tb_text28" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:layout_marginTop="@dimen/x60"
            android:layout_marginEnd="@dimen/x90"
            android:layout_toStartOf="@+id/sure"
            android:text="@{cancelTx,default=`取消`}"
            android:textColor="@color/tb_green"
            android:textSize="@dimen/tb_text28" />


    </com.flyco.roundview.RoundRelativeLayout>

</layout>